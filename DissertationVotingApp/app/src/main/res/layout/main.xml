<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <TextView
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Time left: 9:03:03"
            android:id="@+id/time_textView"
            android:layout_gravity="right"
            android:layout_weight="0.11" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="  Mobile Voting"
            android:id="@+id/textView3"
            android:layout_weight="0.11"
            android:longClickable="true"
            android:focusableInTouchMode="false"
            android:textColor="#ff3288ff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register to vote"
            android:id="@+id/reg_btn"
            android:layout_weight="0.08"
            android:layout_gravity="center_horizontal" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/vote_btn"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.21"
            android:src="@drawable/vote_img"
            android:scaleType="fitXY" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contestants Info"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lost My Phone"
            android:id="@+id/lostMain"
            android:layout_weight="0.11"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="154dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Powered by Laur M. IT&amp;C Security Master"
            android:id="@+id/mainTextViewBottom"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.25" />

    </LinearLayout>
</RelativeLayout>